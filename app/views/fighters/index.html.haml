%h1 Listing fighters

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Hit points
      %th Strength
      %th Precision
      %th
      %th
      %th

  %tbody
    - @fighters.each do |fighter|
      %tr
        %td= fighter.name
        %td= fighter.description
        %td= fighter.hit_points
        %td= fighter.strength
        %td= fighter.precision
        %td= link_to 'Show', fighter
        %td= link_to 'Edit', edit_fighter_path(fighter)
        %td= link_to 'Destroy', fighter, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Fighter', new_fighter_path
