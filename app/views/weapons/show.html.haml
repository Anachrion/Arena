%img.img-fluid.img-responsive.rounded{ src: "#{(@weapon.image&.persisted? ? url_for(@weapon.image) : image_path("object-placeholder.jpg"))}", style: "max-height: 300px;"}

%h3
  = @weapon.name

%span.text-secondary
  = @weapon.description

%p.mt-2
  %b Modificateur de pr√©cision :
  = @weapon.precision_modifier
%p
  %b Modificateur de dommage :
  = @weapon.damage_modifier

.d-flex.flex-column.align-items-start
  = link_to 'Retour', weapons_path, class:"btn btn-outline-primary mt-2"
  = link_to 'Edit', edit_weapon_path(@weapon), class:"btn btn-outline-success mt-2"
  = link_to "Supprimer", @weapon, method: :delete, class:"btn btn-danger mt-2"
